{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "https://chat.openai.com/",
    "distDir": "https://chat.openai.com/",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "TauriChatGPT",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.aungmyokyaw.chat-gpt-tauri",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "chat-gpt-tauri",
        "width": 800,
        "height": 600,
        "maximized": true
      }
    ]
  }
}
